<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgbaihatcothethich"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/txttenbaohatcothethich"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgbaihatcothethich"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Tên Bài Hát"
        android:textColor="#000000"
        android:textSize="16dp" />
    <TextView
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imgbaihatcothethich"
        android:layout_below="@+id/txttenbaohatcothethich"
        android:id="@+id/txttencasicothethich"
        android:text="Ca sĩ"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:ellipsize="end"
        android:textColor="#888484"
        />
    <ImageButton
        android:layout_centerInParent="true"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_more_vert_24"
        android:id="@+id/btnmore"
        android:layout_width="30dp"
        android:layout_height="55dp"/>
</RelativeLayout>