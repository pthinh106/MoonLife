<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:id="@+id/imgviewbackgroundBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <RelativeLayout
        android:id="@+id/relatve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgviewbackgroundBanner">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/imgviewbanner"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="yeu em nhieu"
            android:ellipsize="end"
            android:textSize="17sp"
            android:id="@+id/txtviewbannerbaihat"
            android:layout_toRightOf="@id/imgviewbanner"
            android:layout_alignTop="@id/imgviewbanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/imgviewbanner"
            android:layout_below="@id/txtviewbannerbaihat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtviewnoidunbg"
                android:textColor="#ffffff"
                android:text="Nguyen Phuoc Thinh"
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:textSize="13sp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>